{
  "manifest_version": 3,
  "name": "Hacker News Modifier",
  "version": "1.0",
  "description": "Modifies the appearance and content of thehackernews.com",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://thehackernews.com/*"],
      "js": ["content.js"],
      "css": ["css/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}